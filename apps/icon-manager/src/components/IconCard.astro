---
import { t, type Locale } from '../lib/i18n';

interface Props {
  name: string;
  content: string;
  category?: string;
  isSelected?: boolean;
  locale?: Locale;
}

const { name, content, category = 'custom', isSelected = false, locale = 'en' } = Astro.props;

const i18n = (key: Parameters<typeof t>[0]) => t(key, locale);

// Detect if SVG is animated
const isAnimated = /<animate|<animateTransform|<animateMotion|<set\s/i.test(content);
---

<div
  class:list={["im-icon-card", { selected: isSelected, animated: isAnimated }]}
  data-name={name}
  data-category={category}
  data-animated={isAnimated ? "true" : undefined}
>
  <div class="im-icon-checkbox">
    <input type="checkbox" checked={isSelected} />
  </div>

  <div class="im-icon-preview" set:html={content} />
  <div class="im-icon-info">
    <div class="im-icon-name" title={name}>{name}</div>
    <div class="im-icon-category">{category}</div>
  </div>
  <div class="im-icon-actions">
    <button class="im-icon-action copy-name" title={i18n('action.copy_name')} data-action="copy-name">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
        <rect x="8" y="2" width="8" height="4" rx="1"></rect>
      </svg>
    </button>
    <button class="im-icon-action copy" title={i18n('action.copy_svg')} data-action="copy">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
      </svg>
    </button>
    <button class="im-icon-action delete" title={i18n('action.delete')} data-action="delete">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="3,6 5,6 21,6"></polyline>
        <path d="M19,6v14a2,2 0,0 1,-2,2H7a2,2 0,0 1,-2,-2V6m3,0V4a2,2 0,0 1,2,-2h4a2,2 0,0 1,2,2v2"></path>
      </svg>
    </button>
  </div>
</div>

<style>
  .im-icon-card {
    background: #18181b;
    border: 1px solid #27272a;
    border-radius: 12px;
    padding: 1rem;
    position: relative;
    transition: 200ms ease;
    cursor: pointer;
  }

  .im-icon-card:hover {
    border-color: #3f3f46;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .im-icon-card.selected {
    border-color: #6366f1;
    background: rgba(99, 102, 241, 0.1);
  }

  /* Favorited style - golden border and subtle glow */
  .im-icon-card.favorited {
    border-color: #ca8a04;
    box-shadow: 0 0 0 1px rgba(250, 204, 21, 0.3), 0 4px 12px rgba(250, 204, 21, 0.1);
  }

  .im-icon-card.favorited:hover {
    border-color: #facc15;
    box-shadow: 0 0 0 1px rgba(250, 204, 21, 0.5), 0 8px 24px rgba(250, 204, 21, 0.15);
  }

  /* In project style - green indicator */
  .im-icon-card.in-project::after {
    content: '';
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    box-shadow: 0 0 6px rgba(34, 197, 94, 0.5);
  }

  /* Animated card - subtle shake animation */
  .im-icon-card.animated {
    animation: animatedShake 3s ease-in-out infinite;
  }

  @keyframes animatedShake {
    0%, 100% {
      transform: translateY(0) rotate(0);
    }
    25% {
      transform: translateY(-1px) rotate(-0.5deg);
    }
    75% {
      transform: translateY(1px) rotate(0.5deg);
    }
  }

  .im-icon-card.animated:hover {
    animation: none;
  }

  .im-icon-checkbox {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    opacity: 0;
    transition: 150ms ease;
  }

  .im-icon-card:hover .im-icon-checkbox,
  .im-icon-card.selected .im-icon-checkbox {
    opacity: 1;
  }

  .im-icon-checkbox input {
    width: 16px;
    height: 16px;
    cursor: pointer;
    accent-color: #6366f1;
  }

  .im-icon-preview {
    width: 100%;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #09090b;
    border-radius: 8px;
    margin-bottom: 0.75rem;
    padding: 1rem;
    color: #f4f4f5;
  }

  .im-icon-preview :global(svg) {
    width: 32px;
    height: 32px;
    color: inherit;
    fill: currentColor;
  }

  .im-icon-info {
    text-align: center;
  }

  .im-icon-name {
    font-size: 0.8125rem;
    font-weight: 500;
    color: #f4f4f5;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 0.25rem;
  }

  .im-icon-category {
    font-size: 0.6875rem;
    color: #71717a;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .im-icon-actions {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    display: flex;
    gap: 0.25rem;
    opacity: 0;
    transition: 150ms ease;
  }

  .im-icon-card:hover .im-icon-actions {
    opacity: 1;
  }

  .im-icon-action {
    width: 28px;
    height: 28px;
    border-radius: 6px;
    border: none;
    background: #27272a;
    color: #a1a1aa;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: 150ms ease;
  }

  .im-icon-action:hover {
    background: #3f3f46;
    color: #f4f4f5;
  }

  .im-icon-action.delete:hover {
    background: rgba(239, 68, 68, 0.2);
    color: #ef4444;
  }
</style>
