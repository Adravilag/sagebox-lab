---
import IconCard from './IconCard.astro';
import { createT, type Locale } from '../lib/i18n';

interface Props {
  icons: Array<{ name: string; content: string; category: string }>;
  selectedIcons?: string[];
  viewMode?: 'grid' | 'list';
  locale?: Locale;
}

const { icons, selectedIcons = [], viewMode = 'grid', locale = 'en' } = Astro.props;
const i18n = createT(locale);
---

<div class="im-grid-container">
  <!-- Toolbar -->
  <div class="im-grid-toolbar">
    <div class="im-toolbar-left">
      <button
        class="im-select-all-btn"
        id="im-select-all-btn"
        title={i18n('selection.select_all')}
      >
        <span class="im-checkbox-icon">
          <svg class="im-check-empty" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="3"></rect>
          </svg>
          <svg class="im-check-filled" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <rect x="3" y="3" width="18" height="18" rx="3" fill="currentColor"/>
            <path d="M9 12l2 2 4-4" stroke="#fff" stroke-width="2.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
        <span class="im-select-label">{i18n('selection.select_all')}</span>
      </button>

      <span class="im-selection-info" id="im-selection-info"></span>
    </div>

    <span class="im-grid-count">
      <span id="im-visible-count">{icons.length}</span> {i18n('header.icons')}
    </span>
  </div>
  {icons.length > 0 ? (
    <div class:list={["im-icon-grid", `im-view-${viewMode}`]} id="im-icon-grid" data-view={viewMode}>
      {icons.map((icon) => (
        <IconCard
          name={icon.name}
          content={icon.content}
          category={icon.category}
          isSelected={selectedIcons.includes(icon.name)}
          locale={locale}
        />
      ))}
    </div>
  ) : (
    <div class="im-empty-state">
      <div class="im-empty-icon">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
          <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
          <line x1="12" y1="22.08" x2="12" y2="12"></line>
        </svg>
      </div>
      <h3>{i18n('empty.no_icons')}</h3>
      <p>{i18n('empty.no_icons_hint')}</p>
    </div>
  )}
</div>

<style>
  .im-grid-container {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
  }

  .im-grid-toolbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
    padding: 0.625rem 0.875rem;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.08), rgba(139, 92, 246, 0.05));
    border: 1px solid rgba(99, 102, 241, 0.15);
    border-radius: 10px;
  }

  .im-toolbar-left {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .im-grid-count {
    font-size: 0.8125rem;
    color: #71717a;
    font-weight: 500;
  }

  .im-grid-count span {
    color: #a1a1aa;
    font-weight: 600;
  }

  .im-select-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-size: 0.8125rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 150ms ease;
    border: 1px solid transparent;
    background: transparent;
    color: #a1a1aa;
  }

  .im-select-all-btn:hover {
    background: rgba(255, 255, 255, 0.05);
    color: #f4f4f5;
  }

  .im-select-all-btn:hover .im-checkbox-icon {
    border-color: #6366f1;
  }

  .im-checkbox-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    border-radius: 4px;
    transition: all 150ms ease;
  }

  .im-check-empty {
    display: block;
    color: #52525b;
  }

  .im-check-filled {
    display: none;
    color: #6366f1;
  }

  .im-select-all-btn.active .im-check-empty {
    display: none;
  }

  .im-select-all-btn.active .im-check-filled {
    display: block;
  }

  .im-select-all-btn.active {
    color: #6366f1;
  }

  .im-select-all-btn.partial .im-check-empty rect {
    fill: rgba(99, 102, 241, 0.3);
    stroke: #6366f1;
  }

  .im-select-label {
    user-select: none;
  }

  .im-selection-info {
    font-size: 0.75rem;
    color: #6366f1;
    font-weight: 500;
    padding: 0.25rem 0.625rem;
    background: rgba(99, 102, 241, 0.1);
    border-radius: 20px;
    display: none;
  }

  .im-selection-info.visible {
    display: inline-block;
  }

  .im-icon-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 1rem;
  }

  /* List View */
  .im-icon-grid.im-view-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .im-icon-grid.im-view-list :global(.im-icon-card) {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1rem;
  }

  .im-icon-grid.im-view-list :global(.im-icon-preview) {
    width: 40px;
    height: 40px;
    aspect-ratio: 1;
    margin-bottom: 0;
    padding: 0.5rem;
    flex-shrink: 0;
  }

  .im-icon-grid.im-view-list :global(.im-icon-preview svg) {
    width: 24px;
    height: 24px;
  }

  .im-icon-grid.im-view-list :global(.im-icon-info) {
    flex: 1;
    text-align: left;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .im-icon-grid.im-view-list :global(.im-icon-name) {
    font-size: 0.875rem;
    min-width: 200px;
  }

  .im-icon-grid.im-view-list :global(.im-icon-category) {
    font-size: 0.75rem;
  }

  .im-icon-grid.im-view-list :global(.im-icon-checkbox) {
    position: static;
    opacity: 1;
    margin-right: 0.5rem;
  }

  .im-icon-grid.im-view-list :global(.im-icon-actions) {
    position: static;
    opacity: 1;
  }

  .im-empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    text-align: center;
    color: #71717a;
  }

  .im-empty-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    opacity: 0.5;
  }

  .im-empty-state h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #a1a1aa;
    margin: 0 0 0.5rem 0;
  }

  .im-empty-state p {
    font-size: 0.9375rem;
    margin: 0;
  }
</style>
