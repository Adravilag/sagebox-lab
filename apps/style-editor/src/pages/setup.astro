  import('./assets/style-editor-bridge.js');
}`}></code></pre>
          </div>

          <div class="tab-content" data-content="html">
            <p>En tu <code>index.html</code>:</p>
            <pre><code>&lt;script src="http://localhost:4568/bridge.js"&gt;&lt;/script&gt;</code></pre>
